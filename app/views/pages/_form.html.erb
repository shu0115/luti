
<%= form_for :page, url: { action: @submit, id: @page.try(:id) } do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>

  <div class="field">
    <%= f.label :talk_id %><br />
    <%= f.number_field :talk_id %>
  </div>

  <div class="field">
    <%= f.label :number %><br />
    <%= f.number_field :number %>
  </div>

  <div class="field">
    <%= f.label :contents %><br />
    <%= f.text_area :contents %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>

  <div class="actions">
    <%= f.submit t( "menu.#{@submit}", default: @submit ), disable_with: t( "menu.#{@submit}", default: @submit ) %>
  </div>
<% end %>
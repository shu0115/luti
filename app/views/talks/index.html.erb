
<h1>Talks</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @talks.each{ |talk| %>
  <tr>
    <td><%= talk.user_id %></td>
    <td><%= talk.name %></td>
    <td><%= link_to "Slide", { controller: "pages", action: "slide", talk_id: talk.id }, target: "_blank" %></td>
    <td><%= link_to "Pages", controller: "pages", talk_id: talk.id %></td>
    <% if talk.own_user?( session[:user_id] ) %>
      <td><%= link_to t( "menu.show", default: "Show" ), action: "show", id: talk.id %></td>
      <td><%= link_to t( "menu.edit", default: "Edit" ), action: "edit", id: talk.id %></td>
      <td><%= link_to t( "menu.destroy", default: "Delete" ), { action: "destroy", id: talk.id }, onclick: "return confirm('本当に削除してよろしいですか？');" %></td>
    <% else %>
      <td></td>
      <td></td>
      <td></td>
    <% end %>
  </tr>
<% } %>
</table>

